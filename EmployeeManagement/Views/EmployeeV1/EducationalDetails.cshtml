@model EmployeeManagement.Models.EmployeeEducation

@{
    ViewBag.Title = "CreateEducational";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateEducational</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>EmployeeEducation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @*@Html.HiddenFor(model => model.EmployeeId)*@

        @*@Ajax.ActionLink("Add Education", "AddEducationView",
            new AjaxOptions() {
                HttpMethod="GET", UpdateTargetId = "divEducations",
                InsertionMode = InsertionMode.InsertAfter
            })*@

        @*<div id="divEducations"></div>*@

        @*@Html.Action("AddEducationView")*@

        <div class="row" id="rowEducation">
            <h3 style="text-align:center;">Add Education Detail</h3>
            <hr />
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.EducationTypeId, "EducationTypeId", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("EducationTypeId", (IEnumerable<SelectListItem>)ViewBag.EducationTypeIdList, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EducationTypeId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.PassoutYear, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.Editor("PassoutYear", new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.EditorFor(model => model.PassoutYear, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PassoutYear, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Specialization, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.Editor("Specialization", new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.EditorFor(model => model.Specialization, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Specialization, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Percentage, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.Editor("Percentage", new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.EditorFor(model => model.Percentage, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Percentage, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CollegeName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.Editor("CollegeName", new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.EditorFor(model => model.CollegeName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CollegeName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="button" id="btnAdd" value="Click to add new education" class="form-control btn btn-success" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Educational Details" class="btn btn-primary" style="float:right;" />
            </div>
        </div>
    </div>
}

<script>
    $("#btnAdd").click(function () {
        debugger;
        var div = $("#rowEducation").html();
        if (sessionStorage.getItem('educationForm') == null ||
            sessionStorage.getItem('educationForm') == undefined) {
            sessionStorage.setItem('educationForm', div);
        }

        $("#rowEducation").append(sessionStorage.getItem('educationForm'));
    });
</script>
